<h1>form</h1>

<%= form_for @guest do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :head_count %>
  <%= f.text_field :head_count, class: 'form-control' %>

  <%= f.submit 'Submit', class: 'btn btn-primary btn-wide' %>

<% end %>
